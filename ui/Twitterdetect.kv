<Twitterdetect>:
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 56/255, 40/255, 81/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        MDIconButton:
            icon: "home"  # You can change this to the icon you prefer
            pos_hint: {"x": 0.02, "top": 0.98}  # Adjust the position for the home button
            on_release: root.manager.current = 'home'  # Switch to the 'home' screen when clicked

        MDLabel:
            text: 'Result'
            pos_hint: {"center_x": .5, "center_y": .7}
            font_size: "30sp"
            bold: True
            halign: "center"
        MDLabel:
            id:result_label
            pos_hint:{"center_x":.5,"center_y":.5}
            halign:"center"
        RelativeLayout:
            size_hint: 0.8, None
            height: dp(48)
            pos_hint: {"center_x": .5, "center_y": .3}

            MDRaisedButton:
                
                text: "Block"
                text_color: 1, 1, 1, 1
                font_size: "20sp"
                size_hint: 1, 1
                ripple_behavior: True
                on_release: root.detect()  # Call the 'detect' method when clicked
                background_color: 1,0,0,1  # Make the button's background transparent
                md_bg_color: [1,0,0,1]
                canvas.before:
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [15, 15, 15, 15]  # Adjust the radius to make it rounded
