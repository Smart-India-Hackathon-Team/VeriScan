<TwitterScreen>:
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 56/255, 40/255, 81/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        MDIconButton:
            icon: "arrow-left"  # You can change this to the icon you prefer
            pos_hint: {"x": 0.02, "top": 0.98}  # Adjust the position for the home button
            on_release: root.bckBtn()  # Switch to the 'home' screen when clicked

        Image:
            size_hint_x:0.4
            source: "assets/twitter.png"
            allow_stretch:True
            pos_hint: {"center_x": 0.5, "center_y": 0.75}  # Adjust the position and center the image

        MDLabel:
            text: "Twitter"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}  # Center the label
            halign: "center"
            font_size: "20sp"
        
        MDTextField:
            id: text_input
            hint_text: "Write Twitter Profile Link"
            hint_text_color: 1, 1, 1, 1
            size_hint: 0.8, None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            multiline: False
            mode: "rectangle"
            background_color: 1, 1, 1, 1  # Set background color to white
            cursor_color: 1,1,1,1  # Set cursor color to white
            line_color_normal: 1, 1, 1, 1  # Set line color to white when not focused
            line_color_focus: 1, 1, 1, 1  # Set line color to white when focused
            padding: 15

        RelativeLayout:
            size_hint: 0.8, None
            height: dp(48)
            pos_hint: {"center_x": .5, "center_y": .3}

            MDRaisedButton:
                text: "Search"
                text_color: 1, 1, 1, 1
                font_size: "20sp"
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [15, 15, 15, 15]  # Adjust the radius to make it rounded
                ripple_behavior: True
                background_color: 0, 0, 0, 0  # Make the button's background transparent
                on_release: root.get_profile_info(text_input.text)